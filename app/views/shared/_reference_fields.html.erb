    <%= link_to_remove_association "<i class='fa fa-minus' style='color:red'></i> remove reference".html_safe, f %>
  </div>
  <div class="col-md-6">
    <%= f.input :doi, placeholder: 'DOI', label: false %>
  </div>
  <div class="col-md-6">
    <%= f.input :url, placeholder: 'URL', label: false %>
  </div>
  <div class="col-md-12">
    <%= f.input :body, placeholder: 'Citation (Required)', label: false %>
  </div>
</div>
